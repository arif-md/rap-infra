{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environmentName": {
        "value": "${AZURE_ENV_NAME}"
      },
      "acrName": {
        "value": "${AZURE_ACR_NAME}"
      },
      "acrResourceGroupOverride": {
        "value": "${AZURE_ACR_RESOURCE_GROUP}"
      },
      "skipFrontendAcrPullRoleAssignment": {
        "value": "${SKIP_FRONTEND_ACR_PULL_ROLE_ASSIGNMENT=true}"
      },
      "skipBackendAcrPullRoleAssignment": {
        "value": "${SKIP_BACKEND_ACR_PULL_ROLE_ASSIGNMENT=true}"
      },
      "frontendImage": {
        "value": "${SERVICE_FRONTEND_IMAGE_NAME}"
      },
      "backendImage": {
        "value": "${SERVICE_BACKEND_IMAGE_NAME}"
      },
      "enableSqlDatabase": {
        "value": "${ENABLE_SQL_DATABASE=true}"
      },
      "enableVnetIntegration": {
        "value": "${ENABLE_VNET_INTEGRATION=false}"
      },
      "keyVaultName": {
        "value": "${KEY_VAULT_NAME=}"
      },
      "sqlAdminLogin": {
        "value": "${SQL_ADMIN_LOGIN=sqladmin}"
      },
      "sqlAdminPassword": {
        "value": "${SQL_ADMIN_PASSWORD}"
      },
      "sqlAzureAdAdminObjectId": {
        "value": "${SQL_AZURE_AD_ADMIN_OBJECT_ID=}"
      },
      "sqlAzureAdAdminLogin": {
        "value": "${SQL_AZURE_AD_ADMIN_LOGIN=}"
      },
      "sqlAzureAdAdminPrincipalType": {
        "value": "${SQL_AZURE_AD_ADMIN_PRINCIPAL_TYPE=Application}"
      },
      "sqlDatabaseSku": {
        "value": "${SQL_DATABASE_SKU=Basic}"
      },
      "sqlDatabaseTier": {
        "value": "${SQL_DATABASE_TIER=Basic}"
      },
      "backendAzureFunctionsExists": {
        "value": "${SERVICE_BACKEND_AZURE_FUNCTIONS_RESOURCE_EXISTS=false}"
      },
      "backendAzureFunctionsDefinition": {
        "value": {
          "settings": [
            {
              "name": "",
              "value": "${VAR}",
              "_comment_name": "The name of the environment variable when running in Azure. If empty, ignored.",
              "_comment_value": "The value to provide. This can be a fixed literal, or an expression like ${VAR} to use the value of 'VAR' from the current environment."
            },
            {
              "name": "",
              "value": "${VAR_S}",
              "secret": true,
              "_comment_name": "The name of the environment variable when running in Azure. If empty, ignored.",
              "_comment_value": "The value to provide. This can be a fixed literal, or an expression like ${VAR_S} to use the value of 'VAR_S' from the current environment."
            }
          ]
        }
      },
      "frontendAngularExists": {
        "value": "${SERVICE_FRONTEND_ANGULAR_RESOURCE_EXISTS=false}"
      },
      "frontendAngularDefinition": {
        "value": {
          "image": "myacr.azurecr.io/rap-frontend:latest",
          "env": [
            { "name": "API_BASE_URL", "value": "https://api.example.com" }
          ]
        }
      },
      "principalId": {
        "value": "${AZURE_PRINCIPAL_ID}"
      },
      "oidcAuthorizationEndpoint": {
        "value": "${OIDC_AUTHORIZATION_ENDPOINT}"
      },
      "oidcTokenEndpoint": {
        "value": "${OIDC_TOKEN_ENDPOINT}"
      },
      "oidcUserInfoEndpoint": {
        "value": "${OIDC_USER_INFO_ENDPOINT}"
      },
      "oidcJwkSetUri": {
        "value": "${OIDC_JWK_SET_URI}"
      },
      "oidcClientId": {
        "value": "${OIDC_CLIENT_ID}"
      },
      "jwtSecret": {
        "value": "${JWT_SECRET}"
      },
      "jwtIssuer": {
        "value": "${JWT_ISSUER=raptor-app}"
      },
      "jwtAccessTokenExpirationMinutes": {
        "value": "${JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15}"
      },
      "jwtRefreshTokenExpirationDays": {
        "value": "${JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7}"
      },
      "corsAllowedOrigins": {
        "value": "${BACKEND_CORS_ALLOWED_ORIGINS}"
      }
    }
}
